# Us Mobile App - Environment Variables
# Copy this file to .env and fill in your actual values

# ===========================
# Supabase Configuration
# ===========================

# Local development (used with `npx supabase start`)
EXPO_PUBLIC_SUPABASE_URL=http://localhost:54321
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-local-anon-key-here

# Production (uncomment when deploying)
# EXPO_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
# EXPO_PUBLIC_SUPABASE_ANON_KEY=your-production-anon-key-here

# ===========================
# App Configuration
# ===========================

# App environment: development | staging | production
EXPO_PUBLIC_ENV=development

# Enable debug logging (true | false)
EXPO_PUBLIC_DEBUG=true

# ===========================
# Feature Flags
# ===========================

# Enable offline mode (default: true)
EXPO_PUBLIC_OFFLINE_ENABLED=true

# Max draft storage size in MB (default: 5)
EXPO_PUBLIC_MAX_DRAFT_SIZE_MB=5

# ===========================
# Photo/Memory Limits
# ===========================

# Max photo size in MB (per photo)
EXPO_PUBLIC_MAX_PHOTO_SIZE_MB=10

# Max photos per space
EXPO_PUBLIC_MAX_PHOTOS_PER_SPACE=500

# ===========================
# Invitation Configuration
# ===========================

# Invitation link expiration in days
EXPO_PUBLIC_INVITATION_EXPIRY_DAYS=7

# ===========================
# Notifications (Expo Push)
# ===========================

# Expo project ID (for push notifications)
# Get this from app.json after running `eas init`
# EXPO_PUBLIC_PROJECT_ID=your-expo-project-id
